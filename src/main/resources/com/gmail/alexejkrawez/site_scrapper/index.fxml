<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="anchorPane"
            prefHeight="400.0"
            prefWidth="860.0"
            fx:controller="com.gmail.alexejkrawez.site_scrapper.Controller">

    <HBox fx:id="hBox"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          minHeight="32.0"
          maxHeight="32.0">

        <TextField fx:id="addLinkField"
                   minWidth="-Infinity"
                   maxWidth="Infinity"
                   minHeight="28.0"
                   maxHeight="28.0"
                   HBox.hgrow="ALWAYS"
                   promptText="Add ranobelib.me link here"
                   focusTraversable="false"
                   accessibleText="addLinkField">
            <HBox.margin>
                <Insets right="2.0"
                        left="2.0"
                        top="2.0"/>
            </HBox.margin>
        </TextField>

        <Button fx:id="getTableOfContentsButton"
                alignment="CENTER"
                contentDisplay="CENTER"
                minWidth="28.0"
                maxWidth="28.0"
                minHeight="28.0"
                maxHeight="28.0"
                onAction="#getTableOfContents"
                disable="false">
            <HBox.margin>
                <Insets top="2.0"/>
            </HBox.margin>
            <graphic>
                <FontIcon fx:id="getTableOfContentsIcon" iconLiteral="fltral-apps-list-24" iconSize="24"/>
            </graphic>
        </Button>

    </HBox>

    <HBox fx:id="hBox2"
          AnchorPane.topAnchor="32.0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          minHeight="32.0"
          maxHeight="32.0">

        <TextField fx:id="savePathField"
                   minWidth="-Infinity"
                   maxWidth="Infinity"
                   minHeight="28.0"
                   maxHeight="28.0"
                   HBox.hgrow="ALWAYS"
                   promptText="Add ranobelib.me link here"
                   focusTraversable="false"
                   accessibleText="addLinkField">
            <HBox.margin>
                <Insets right="2.0"
                        left="2.0"
                        top="2.0"/>
            </HBox.margin>
        </TextField>

        <Button fx:id="saveToLocalButton"
                alignment="CENTER"
                contentDisplay="CENTER"
                minWidth="28.0"
                maxWidth="28.0"
                minHeight="28.0"
                maxHeight="28.0"
                onAction="#saveToLocal"
                disable="true">
            <HBox.margin>
                <Insets top="2.0"/>
            </HBox.margin>
            <graphic>
                <FontIcon fx:id="saveToLocalIcon" iconLiteral="fltral-apps-list-24" iconSize="24"/>
            </graphic>
        </Button>

    </HBox>

    <HBox fx:id="hBox3"
          AnchorPane.topAnchor="64.0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          minHeight="32.0"
          maxHeight="32.0">

        <Button fx:id="123"
                alignment="CENTER"
                contentDisplay="CENTER"
                minWidth="28.0"
                maxWidth="28.0"
                minHeight="28.0"
                maxHeight="28.0"
                onAction="#getTableOfContents"
                disable="false">
            <HBox.margin>
                <Insets top="2.0"/>
            </HBox.margin>
            <graphic>
                <FontIcon fx:id="222" iconLiteral="fltral-apps-list-24" iconSize="24"/>
            </graphic>
        </Button>

    </HBox>

    <TableView fx:id="tableView"
               AnchorPane.topAnchor="96.0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"
               AnchorPane.bottomAnchor="24.0">
    </TableView>

    <AnchorPane fx:id="footer"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0"
                minHeight="24.0"
                maxHeight="24.0">

        <Label fx:id="footerLabel"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="24.0"
               minHeight="24.0"
               maxHeight="24.0"
               text='Drop PDF-files in the box above or choose "Add files" button from the toolbar'/>

        <Button fx:id="themeChangerButton"
                AnchorPane.bottomAnchor="2"
                AnchorPane.rightAnchor="2"
                alignment="CENTER"
                contentDisplay="LEFT"
                minWidth="20.0"
                maxWidth="20.0"
                minHeight="20.0"
                maxHeight="20.0"
                onAction="#changeTheme">
            <graphic>
                <FontIcon fx:id="themeChangerIcon" iconLiteral="fltfmz-weather-moon-20" iconSize="20"/>
            </graphic>
        </Button>

    </AnchorPane>


</AnchorPane>