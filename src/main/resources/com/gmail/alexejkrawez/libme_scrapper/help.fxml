<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="anchorPane"
            prefHeight="450.0"
            prefWidth="375.0"
            fx:controller="com.gmail.alexejkrawez.libme_scrapper.HelpWindowController">

    <VBox AnchorPane.topAnchor="10"
          AnchorPane.rightAnchor="10.0"
          AnchorPane.leftAnchor="10"
          AnchorPane.bottomAnchor="35"
          alignment="TOP_LEFT">
        <Label fx:id="helpText"
               wrapText="true"/>

        <Label fx:id="aboutText"
               wrapText="true"/>

        <Hyperlink fx:id="githubLink">
            <VBox.margin>
                <Insets left="16.0"/>
            </VBox.margin>
        </Hyperlink>
    </VBox>

    <VBox AnchorPane.rightAnchor="10.0"
          AnchorPane.leftAnchor="10"
          AnchorPane.bottomAnchor="5"
          alignment="CENTER">
        <Button fx:id="closeDialogButton"
                alignment="CENTER"
                contentDisplay="CENTER"
                minWidth="150.0"
                maxWidth="150.0"
                minHeight="30.0"
                maxHeight="30.0"
                text="Понятно"
                onAction="#closeDialog">
        </Button>
    </VBox>
</AnchorPane>